{
  "functions": {
    "api/index.js": {
      "maxDuration": 10,
      "includeFiles": "data/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "env": {
    "DB_DIALECT": "sqlite",
    "DB_STORAGE": "./data/production.sqlite",
    "NODE_ENV": "production"
  }
}